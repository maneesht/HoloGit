{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "es6"
        ],
        "allowSyntheticDefaultImports": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noUnusedLocals": false,
        "pretty": true,
        "removeComments": false,
        "sourceMap": false,
        "suppressImplicitAnyIndexErrors": true,
        "target": "es6"
    }
}